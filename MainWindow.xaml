<Window x:Class="ChatBotApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LLM Chat Bot" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ChatListBox" Grid.Row="0" Margin="10"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UserTextBox" Grid.Column="0" Height="30" VerticalContentAlignment="Center"/>
            <Button Content="Gönder" Grid.Column="1" Width="80" Margin="10,0,0,0" Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>

